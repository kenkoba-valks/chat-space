.sidebar
  .sidebar__username
    .sidebar__username-brank
      .sidebar__username-brank-left
        = current_user.name
      .sidebar__username-brank-right
        = link_to new_group_path do
          = icon('fas', 'edit',class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',class: 'icon')
  .sidebar__index
    - current_user.groups.each do |group|
      .sidebar__index-first
        = link_to group_messages_path(group) do
          .sidebar__index-first-groupname
            = group.name
          .sidebar__index-first-content
            = group.show_last_message